{
  "name": "metapak-sencrop",
  "version": "5.1.3",
  "description": "A `metapak` plugin for Sencrop projects",
  "main": "index.js",
  "metapak": {
    "configs": [
      "main",
      "tests",
      "readme",
      "eslint",
      "oss"
    ],
    "data": {
      "files": "src/**/*.js"
    }
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "jest --coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "lint": "eslint src/**/*.js",
    "metapak": "metapak",
    "prettier": "prettier --write src/**/*.js",
    "preversion": "npm t && npm run lint",
    "test": "jest",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sencrop/metapak-sencrop.git"
  },
  "keywords": [
    "metapak"
  ],
  "author": "Nicolas Froidure (Sencrop)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sencrop/metapak-sencrop/issues"
  },
  "homepage": "https://github.com/sencrop/metapak-sencrop#readme",
  "peerDependencies": {
    "metapak": "^1.0.3"
  },
  "devDependencies": {
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^1.3.22",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.1",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.4.3",
    "metapak": "^1.0.3",
    "prettier": "^1.12.1",
    "sinon": "^5.0.3"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {},
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node"
  }
}
